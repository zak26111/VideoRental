@model VideoRental.Models.Customer
@{
    ViewBag.Title = "Details";
    var isSubscribe = Model.IsSubscribeToNewsLetter == true ? "Yes" : "No";
}

<h2>Customer Details</h2>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Membership Type</th>
            <th>Date Of Birth</th>
            <th>SignUp Fee</th>
            <th>Duration in Month</th>
            <th>Discount Rate</th>
            <th>Is Subscribe to Newsletter?</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Name</td>
            <td>@Model.MemberShipType.Name</td>
            <td>@Model.DateOfBirth</td>
            <td>@Model.MemberShipType.SignUpFee</td>
            <td>@Model.MemberShipType.DurationInMonth</td>
            <td>@Model.MemberShipType.DiscountRate</td>
            <td>@isSubscribe</td>
        </tr>
    </tbody>
</table>

@Html.ActionLink("Back To List", "Index","",new { @class="btn btn-success"})
